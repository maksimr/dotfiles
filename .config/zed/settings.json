// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "tab_bar": {
    "show": false
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 28,
  "buffer_font_family": "JetBrains Mono Thin",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  // https://github.com/zed-industries/zed/blob/main/assets/themes/one/one.json
  // https://zed.dev/docs/extensions/languages#syntax-highlighting
  "experimental.theme_overrides": {
    "editor.foreground": "#e0e0e0",
    "text": "#e0e0e0",
    "editor.background": "#262626",
    "elevated_surface.background": "#262626",
    "surface.background": "#262626",
    "tab_bar.background": "#262626",
    "tab.inactive_background": "#262626",
    "panel.background": "#262626",
    "editor.subheader.background": "#262626",
    "editor.highlighted_line.background": "#262626",
    "toolbar.background": "#262626",
    "tab.active_background": "#262626",
    "editor.gutter.background": "#262626",
    "terminal.background": "#262626",
    "terminal.dim_foreground": "#262626",
    "terminal.ansi.black": "#262626",
    "border": "#303030"
  }
}
