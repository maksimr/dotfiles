[
  {
    "adapter": "JavaScript",
    "label": "Node.js: Current File",
    "type": "node",
    "request": "launch",
    "program": "$ZED_FILE",
    "runtimeExecutable": "node",
    "runtimeArgs": ["--expose-gc"],
    "console": "integratedTerminal",
  },
  {
    "adapter": "JavaScript",
    "label": "Node.js: Current File (watch mode)",
    "type": "node",
    "request": "launch",
    "program": "$ZED_FILE",
    "runtimeExecutable": "node",
    "runtimeArgs": ["--watch"],
    "console": "integratedTerminal",
  },
  {
    "adapter": "JavaScript",
    "label": "TypeScript: Current File",
    "type": "node",
    "request": "launch",
    "program": "$ZED_FILE",
    "runtimeExecutable": "npx",
    "sourceMaps": true,
    "runtimeArgs": ["tsx", "$ZED_FILE"],
    "console": "integratedTerminal",
  },
  {
    "adapter": "JavaScript",
    "label": "TypeScript: Current File (watch mode)",
    "type": "node",
    "request": "launch",
    "program": "$ZED_FILE",
    "runtimeExecutable": "npx",
    "sourceMaps": true,
    "runtimeArgs": ["tsx", "--watch", "$ZED_FILE"],
    "console": "integratedTerminal",
  },
  {
    "adapter": "JavaScript",
    "label": "Chrome: Launch",
    "type": "chrome",
    "request": "launch",
    "url": "http://localhost:1234",
    "webRoot": "$ZED_WORKTREE_ROOT",
    "sourceMaps": true,
    "sourceMapPathOverrides": {
      "webpack:///./src/*": "${webRoot}/src/*",
      "webpack:///src/*": "${webRoot}/src/*",
      "webpack:///*": "${webRoot}/*",
      "/__parcel_source_root/*": "${webRoot}/*",
    },
  },
]
