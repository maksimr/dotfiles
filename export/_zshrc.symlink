# zshrc
# load dotfiles zsh files
if [ -d "$HOME/.zsh" ]; then
  for dzsh in $(ls "$HOME/.zsh"); do
    . $HOME/.zsh/$dzsh
  done
fi

# load .zshrc.local
if [ -f "$HOME/.zshrc.local" ]; then
  . $HOME/.zshrc.local
fi

# load local zsh files
if [ -d "$HOME/.local/zsh" ]; then
  for lzsh in $(ls "$HOME/.local/zsh"); do
    . $HOME/.local/zsh/$lzsh
  done
fi
