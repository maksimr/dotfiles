#!/bin/bash

U_NAME="$(uname -s)"
case "${U_NAME}" in
    Darwin*)
        IDEA_PATH=$HOME/Library/Application\ Support/JetBrains/Toolbox/apps/IDEA-U
        IDEA_EXE=`find $IDEA_PATH -d -type d -name "IntelliJ*.app" | head -n1`
        ;;
    *)
        IDEA_PATH=$HOME/.local/share/JetBrains/Toolbox/apps/IDEA-U
        IDEA_BIN_NAME="idea.sh"
        IDEA_EXE=`find $IDEA_PATH -depth -type f -name "idea.sh" | tail -n1`
        ;;
esac

wd=`pwd`

while [[ $# > 0  ]]
do
    key="$1"
    case $key in
        -l|--line) # [-l|--line line]
            IDEA_ARGS="$IDEA_ARGS $1 $2"
            shift
            shift
            ;;
        --temp-project) # [--temp-project]
            IDEA_ARGS="$IDEA_ARGS $1"
            shift
            ;;
        *)
            file="$1"
            shift
            ;;
    esac
done

function xAbspath() {
    echo "$(pwd)/$1"
}

function xOpen() {
    case "${U_NAME}" in
        Darwin*) open -a "$IDEA_EXE" --args $IDEA_ARGS "$(xAbspath $1)" ;;
        *) exec $IDEA_EXE "$IDEA_ARGS" ;;
    esac
}

# were we given a directory?
if [ -d "$file" ]; then
    #  echo "checking for things in the working dir given"
    wd=`ls -1d "$file" | head -n1`
fi

if [ -f "$file" ]; then
    xOpen "$file"
else
    # let's check for stuff in our working directory.
    pushd $wd > /dev/null

    # does our working dir have an .idea directory?
    if [ -d ".idea" ]; then
        xOpen
    elif [ -f *.ipr ]; then
        xOpen `ls -1d *.ipr | head -n1`
    elif [ -f pom.xml ]; then
        xOpen "pom.xml"
    else
        xOpen
    fi

    popd > /dev/null
fi
